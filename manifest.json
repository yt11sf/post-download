{
    "manifest_version": 2,
    "name": "post-download",
    "version": "1.0",
    "description": "Observe download events and decide action after all download events were completed.",
    "permissions": [
        "downloads",
        "storage",
        "notifications"
    ],
    "applications": {
        "gecko": {
            "id": "gnome-download-notify@ion201",
            "strict_min_version": "42.0"
        }
    },
    "background": {
        "scripts": [
            "main.js"
        ]
    },
    "icons": {
        "16": "icons/underground-16.png",
        "32": "icons/underground-32.png",
        "64": "icons/underground-64.png",
        "128": "icons/underground-128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/underground-16.png",
            "32": "icons/underground-32.png",
            "64": "icons/underground-64.png"
        },
        "default_title": "Post Download",
        "default_popup": "prefs/prefs.html"
    }
}